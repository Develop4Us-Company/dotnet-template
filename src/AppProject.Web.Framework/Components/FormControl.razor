
@inherits AppProjectComponentBase

<RadzenCard>
    <RadzenCard class="rz-mb-3">
        <RadzenRow AlignItems="AlignItems.End">
            <RadzenColumn>
                <RadzenStack Orientation="Orientation.Horizontal" Gap="3" Wrap="FlexWrap.Wrap" JustifyContent="JustifyContent.Right">
                    <RadzenButton ButtonStyle="ButtonStyle.Success" 
                        Icon="save"
                        Text=@StringResource.GetStringByKey("FormControl_SaveButton_Text")
                        Visible=@this.ShowSaveAction
                        Click=@this.OnSave />
                    <RadzenButton ButtonStyle="ButtonStyle.Success" 
                        Icon="start"
                        Text=@StringResource.GetStringByKey("FormControl_ExecuteButton_Text")
                        Visible=@this.ShowExecuteAction
                        Click=@this.OnExecute />
                    @this.GlobalActions
                    <RadzenButton ButtonStyle="ButtonStyle.Success" 
                        Icon="cancel"
                        Text=@StringResource.GetStringByKey("FormControl_CancelButton_Text")
                        Visible=@this.ShowCancelAction
                        Click=@this.OnCancel />
                    <RadzenButton ButtonStyle="ButtonStyle.Success" 
                        Icon="close"
                        Text=@StringResource.GetStringByKey("FormControl_CloseButton_Text")
                        Visible=@this.ShowCloseAction
                        Click=@this.OnClose />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>
    @this.ChildContent
</RadzenCard>

@code {
    [Parameter]
    public RenderFragment? GlobalActions { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool ShowSaveAction { get; set; } = true;

    [Parameter]
    public bool ShowExecuteAction { get; set; }

    [Parameter]
    public bool ShowCancelAction { get; set; } = true;

    [Parameter]
    public bool ShowCloseAction { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]
    public EventCallback OnExecute { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }
}
